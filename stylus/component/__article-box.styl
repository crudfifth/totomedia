        display flex
        flex-flow column
        flex-basis 65%
        width 100%
        height 100%
        color var(--black-font)
        overflow hidden
        .category-label
          flex-basis 10%
          align-self flex-end
          padding 3px 10px
          color #fff
          font-size 0.8vw
          border-radius 2px
          background-color var(--main-bg-color)
        h2  
          display flex
          flex-basis 20%
          margin 10px 0px 10px 20px
          font-size 1.1rem
          align-items center
          text-decoration underliine
        time  
          flex-basis 10%
          margin-left 20px
          font-size 0.8rem
          color #999
        .min-text  
            flex-basis 50%
            // display -webkit-box
