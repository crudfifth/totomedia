          .photo
            height 100%
            filter blur(2px) brightness(1.2)
          &:before  
            content 'READ MORE'
            color white
            font-family 'Raleway', sans-serif
            font-size 0.9vw
            display inline-block
            width 99%
            height 98%
            background-color rgba(0,0,0,.7)
            position absolute
            z-index 1
            text-align center
            vertical-align middle
            animation fadein .7s ease-in-out
            letter-spacing 0.5rem
            @keyframes fadein
              0% 
                opacity 0
                font-size 0
                letter-spacing 0rem
                color white
              30%
                opacity 1
                font-size 1.4vw
                font-weight bold
                box-shadow 5px 0px 0px var(--main-bg-color)
                text-shadow 0px 40px 0px #ffffffff, 0 -40px 0px #ffffffff, 40px 0px 0px #ffffffff, -40px 0px 0px #ffffffff
              100% 
                letter-spacing .5rem
                font-size 0.9vw
                color white
        .line-animation:nth-child(1)
          z-index 2
          position absolute
          top 0
          left 0
          width 100%
          height 3px
          background linear-gradient(to right, var(--article-gradient-dark), var(--article-gradient-bright))
          animation animate1 2s linear infinite
          @keyframes animate1
            0%
              transform translateX(-100%)
            100%
              transform translateX(100%)
        .line-animation:nth-child(2)
          z-index 2
          position absolute
          top 0
          right 0
          width 4px
          height 100%
          background linear-gradient(to bottom, var(--article-gradient-dark), var(--article-gradient-bright))
          animation animate2 2s linear infinite
          animation-delay 1s
          @keyframes animate2
            0%
              transform translateY(-100%)
            100%
              transform translateY(100%)
        .line-animation:nth-child(3)
          z-index 2
          position absolute
          bottom 0
          left 0
          width 100%
          height 3px
          background linear-gradient(to left, var(--article-gradient-dark), var(--article-gradient-bright))
          animation animate3 2s linear infinite
          @keyframes animate3
            0%
              transform translateX(100%)
            100%
              transform translateX(-100%)
        .line-animation:nth-child(4)
          z-index 2
          position absolute
          top 0
          left 0
          width 4px
          height 100%
          background linear-gradient(to top, var(--article-gradient-dark), var(--article-gradient-bright))
          animation animate4 2s linear infinite
          animation-delay 1s
          @keyframes animate4
            0%
              transform translateY(100%)
            100%
              transform translateY(-100%)
        .photo
            height articleImageSize
      .article-image
        position relative
      .photo
        width 100%
        height articleImageSize
        object-fit:cover;
      .article-text
