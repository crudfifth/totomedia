articleImageSize = 30vh
linew = 5vw
lineh = 5vh
ul
  width 90%
  margin 0 auto 
  .article-wrapper 
    .article-box
      border-radius 3px
      display flex
      align-items center
      height 29vh
      margin 40px
      background-color white
      transition-duration .7s
      box-shadow 0 20px 50px rgba(0,0,0,0.1)//
      overflow hidden
      .article-image
        flex-basis 35%
        height 29vh
        &:before
          content ''
          animation fadeout 1s linear 
          @keyframes fadeout
            0%
              opacity 1
            100%
              opacity 0
      &:hover
        box-shadow 11px 20px 50px #ff8c0133,-11px -20px 50px #ff8c0133
        .article-text
          .category-label
            background-color orange
            margin-right 4px
            margin-top 3px
          h2 
            border-left 30px groove orange
            margin-right 2px 
            padding-left 10px
            letter-spacing 0.1rem
            transform: translateY(-2px);
            box-shadow: 2px 2px 2px #9191919c;
            transition .7s ease-in-out
          .min-text  
            color #999
            background: linear-gradient(180deg, #999, #999 30%, white)
            -webkit-background-clip text
            -webkit-text-fill-color transparent
          .read-more
            width 100%
            background-color orange
            transition .2s ease-in-out
            letter-spacing 1rem
            justify-content center
            transform translate(-4px, -3px)
            span 
              transition .2s ease-in-out
              width 100%
              p.rm  
                display none
                animation fadeout .3s 
                font-family 'Raleway', sans-serif
              p.cm  
                display block
                font-family 'Raleway', sans-serif
            i  
              animation fadeout 1s ease-in-out infinite 
        box-shadow 0 10px 20px #8ac9f52
        transform scale(1.05)
        transition-duration .7s
        .article-image
