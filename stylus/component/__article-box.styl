            background: linear-gradient(180deg, #545454, #565656 30%, white)
            -webkit-background-clip text
            -webkit-text-fill-color transparent
        .read-more
          flex-basis 10%
          background-color var(--main-bg-color)
          display flex
          justify-content end
          color white
          letter-spacing 0.3rem
          border-radius 2px
          width 100%
          padding 2px 10px
          border-radius 2px
          text-align center
          margin 0 auto
          span  
            display block
            width 35%
            font-family 'Raleway', sans-serif 
            .cm
              display none
          i
            display flex
            vertical-align middle
            align-items center
            justify-content center

