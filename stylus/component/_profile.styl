.profile, .sitemap, .privacy-policy, .contact, .profile-box, .comment
  width 70%
  margin 50px
  padding 40px
  background-color #fff
  border-radius 3px
  box-shadow 3px 3px 3px rgba(202, 202, 202, 0.1), -3px -3px 3px rgba(202, 202, 202, 0.1) 
  overflow auto
.comment, .profile-box
  width 90%
  flex-flow row
.profile-wrapper 
  display flex
  flex-wrap wrap
.profile-box 
  width 40%
  padding 0
  margin 30px
  a  
    display block
    width 100%
    height 250px
    color var(--black-font)
    .profile-box-img
      display block
      width 80%
      height 200px
      margin 15px auto
      object-fit cover
    span  
      display block
      text-align center
      font-size 0.9rem
.profile-img
  display block
  width 70%
  height 55vh
  margin 30px auto
  object-fit cover