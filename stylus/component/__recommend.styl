.recommend-area 
  width 100%
  .recommend-carousel
    width 90%
    margin 0 auto
    box-shadow: inset 0px 1px 10px #38383863
    overflow hidden
    .recommend
      display flex
      margin 0 40px
      animation carousel 30s infinite linear 0.5s both
      @keyframes carousel
        from
          transform translateX(110%)
        to
          transform translateX(-220%)
      .recommend-item
        width 100%
        .recommend-item-a  
          position relative
          img  
            width 300px
            height 200px
            padding 10px
            object-fit cover
          .recommend-title
            width 92.5%
            position absolute
            display flex
            justify-content center
            color white
            bottom 12px 
            left 4%
            background #0000007a
          &:hover
            // img 
            //   transform scale(1.5) rotate(10deg)
      &:hover 
        animation-play-state paused