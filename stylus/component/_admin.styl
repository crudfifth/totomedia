.admin-operation 
  width 70%
  margin 50px auto
.height-block
  width 15%
  position relative
.admin-menu
  position fixed
  display flex
  flex-flow column
  width 15%
  height 100%
  padding 25px
  background #222
.admin-a  
  &:hover 
    .admin-icon
      border-radius 50%
      box-shadow inset -1px 3px 20px white, -1px 3px 20px white
      transform scale(1.1)
      transition .2s ease-in
  .admin-icon
    display block
    width 50%
    margin 0 auto
    transition .2s ease-out
.admin-button 
  padding 10px
  border none
  border-bottom 1px solid #444
  background none
  text-align left
  color white
  font-size 0.7rem
  font-weight bold
  transition .3s ease-out
  &:hover  
    text-shadow 1px 1px 15px white
    border-left 10px solid #ff5252
    padding-left 10px
    background-color #444
    letter-spacing 2px
    font-size 0.6rem
  &:hover  
  i  
    padding-right 10px
    color white
    font-size 0.7rem
.admin-menu-login
  width 100%
  height 100px
