@import url('https://fonts.googleapis.com/css?family=Poppins:400,500,600,700,800,900');
@import 'component/*'
* 
  font-size 13px
body 
  display flex
  background white
  color #333
.subheading
  display block
  text-align center
.admin-table  
  border 1px solid #555
  width 100%
  border-collapse collapse
  &:hover  
    .admin-th
      text-shadow 1px 1px 15px white
      transition .4s ease-in
.admin-th
  background-color #333
  color white
  transition .4s ease-out
.admin-td
  border 1px solid #333
  text-align center
  font-size 0.8rem
.admin-graph
  position relative
  width 150px
  height 150px
  .admin-circle
    position relative
    fill none
    stroke-width 30px
    stroke #f3f3f3
    stroke-dasharray 440
    stroke-dashoffset 0
    stroke-linecap round
    +.line 
      stroke-dashoffset 0
      stroke #ff5252
.circle-graph 
  position relative
  width 60%
  height 180px
  margin 0 auto
  .admin-graph  
    display block
    width 25%
    height 100%
    margin 0 auto
.number 
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  display flex
  align-items center
  justify-content center
  font-size 2rem
.text
  text-align center
.admin-section
  width 85%
.admin-login
  display flex
  align-items center
  justify-content center
  width 100%
  height 100%
  background-color #262626
  font-family: 'Poppins', sans-serif;
  .admin-login-form
    display block
    width 35%
    padding 20px
    border-radius 4px
    color: #c4c3ca
    background-color #1a1a1a
    background-image url(https://s3-us-west-2.amazonaws.com/s.cdpn.io/1462889/pat.svg)
    box-shadow 1px 1px 10px rgba(13, 13, 13, 0.797)
    .admin-login-head 
      padding 40px 0
      text-align center
      font-size 2rem
    .mail-address, .password
      width 90%
      margin 20px auto
      padding 20px
      background-color #1f2029
      text-align left
      box-shadow 1px 1px 10px rgba(13, 13, 13, 0.797)
      i 
        padding-right 10px
        color: #ffeba7
        font-size 1.2rem
        text-shadow 1px 1px 20px rgba(255, 255, 255, 0.382)
      input
        width 90%
        border none
        border-radius 4px
        background-color #1f2029
        color white
        font-size 1.1rem
        outline none
        text-shadow -1px 1px 20px rgba(255, 255, 255, 0.212)
    .login-button
      text-align center
      button
        margin 30px 
        border none 
        padding 15px 35px
        border-radius 4px
        background #ffeba7
        color #515151
        box-shadow 1px 1px 20px rgba(255, 255, 255, 0.414)
        text-shadow 1px 1px 20px #10267069
.article-create-form
  display flex
  width 85%