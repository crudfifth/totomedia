// *** Magic starts HERE
diameter = 35vmax
.aurora
  background #ffffff
  position relative
  &:before,
  &:after
    content ''
    display block
    position absolute
    width 1px
    height 1px
    border-radius 100%
    opacity .13
    z-index -1
    // transform rotate(55deg)
  &:before
    box-shadow 0 0 diameter diameter rgba(53, 53, 255, 0.823)
    animation hue 5s 0s linear infinite, move1 10s 0s linear infinite
  &:after
    box-shadow 0 0 diameter diameter rgba(77, 203, 253, 0.789)
    animation hue 10s 0s linear infinite, move2 20s 0s linear infinite
  @keyframes hue
    0%
      filter hue-rotate(0deg)
    100%
      filter hue-rotate(360deg)
  @keyframes move1
    0%
      top 0vh
      left 50vw
    25%
      left 0vw
    50%
      top 100vh
    75%
      left 100vw
    100%
      top 0vh
      left 50vw
  @keyframes move2
    0%
      top 50vh
      left 100vw
    25%
      top 100vh
    50%
      left 0vw
    75%
      top 0vh
    100%
      top 50vh
      left 100vw


.sky {
  min-height: 100vh;
  margin: 0;
  align-items: center;
  justify-content: center;
  background-color: #bfdfec;
  font-family: system-ui, calibri, serif;
  background-repeat: repeat-x;
  background-image: url("https://i.stack.imgur.com/b7z29.png");
  animation: movement 10s linear infinite;
}
@keyframes movement {
  0% {
    background-position: 0px 0px;
  }
  100% {
    background-position: 560px 0px;
  }
}


