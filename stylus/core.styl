@import url('https://fonts.googleapis.com/css2?family=Raleway:wght@300&display=swap');
@import 'component/*'
*
  padding 0
  margin 0
  box-sizing border-box
  font-family "Helvetica", "Arial", "Hiragino Kaku Gothic ProN", "Hiragino Sans", YuGothic, "Yu Gothic", "メイリオ", Meiryo, sans-serif
  font-weight bold
  font-size 12px

:root
  --main-bg-color #58a9ef
  --sub-gray-color #eaedf2
  --sub-yellow-color #f9cf00
  --sub-orange-color #f19f4d
  --black-font #555
  --white-font #fff
  // --article-gradient-dark #0c002b
  // --article-gradient-bright #1779ff
  --article-gradient-dark #452601
  --article-gradient-bright #ff8c01
  --gradient-color1 linear-gradient(45deg, #bdb9ff, #67b8ff)
html   
  height 100%
body  
  max-width 100%
  width 100%
  height 100%
  background-color var(--sub-gray-color)
  background-size cover
  background-color var(--sub-gray-color)
  background-blend-mode lighten
  background: linear-gradient(180deg, hsla(335, 103%, 95%, 1) 0%, hsla(201, 100%, 81%, 1) 100%); 
  color var(--black-font)
  overflow-y scroll
  overflow-x hidden
